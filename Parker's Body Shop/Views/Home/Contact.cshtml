@model Parker_s_Body_Shop.Models.ContactRequestViewModel
@Scripts.Render("https://maps.googleapis.com/maps/api/js")
@Scripts.Render("~/Scripts/googleMaps.js")

@{
    ViewBag.Title = "Contact";
}

<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<address>
    Parker's Body Shop is located at:<br />
    814 S Main St<br />
    Clover, South Carolina 29710<br />    
    <abbr title="Phone">P:</abbr>
    803.222.9112
</address>

<div id="map-canvas">
</div>

<p><h4>Prefer that we contact you?  Please submit your request below and we will respond to you as soon as possible.</h4></p>

@using(Html.BeginForm("SubmitContact", "Home", FormMethod.Post))
{
    <div>
        @Html.LabelFor(model => model.FirstName)
        @Html.EditorFor(model => model.FirstName)
    </div>
    
    <div>
        @Html.LabelFor(model => model.LastName)
        @Html.EditorFor(model => model.LastName)
    </div>

    @Html.LabelFor(model => model.Email)
    @Html.EditorFor(model => model.Email)
    
    @Html.LabelFor(model => model.PhoneNumber)
    @Html.EditorFor(model => model.PhoneNumber)
    
    @Html.LabelFor(model => model.Message)
    @Html.EditorFor(model => model.Message)
}